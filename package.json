{
  "name": "ts-decorator-validation",
  "version": "1.1.4",
  "description": "Ensure your typescript objects are always valid using decorators.",
  "main": "dist/src/index.js",
  "typings": "dist/src/index.d.ts",
  "engines": {
    "node": ">=10.0.0"
  },
  "scripts": {
    "compile": "tsc",
    "test": "npm run compile && jest --transformIgnorePatterns \"node_modules/(?!jest-cli)/\"",
    "testWithCoverage": "npm run compile && jest --coverage ",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "prepare": "npm run compile",
    "prepublishOnly": "npm run prepublish",
    "version": "git add .",
    "postversion": "git push && git push --tags",
    "prepublish": "npm run lint && npm run format && git add . && git commit - m \"chore: formats\" && npm test",
    "publish": "npm run version && npm publish"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kanian/ts-decorator-validation.git"
  },
  "keywords": [
    "typescript",
    "decorator",
    "validation"
  ],
  "author": "Patrick Assoa Adou",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/kanian/ts-decorator-validation/issues"
  },
  "homepage": "https://github.com/kanian/ts-decorator-validation#readme",
  "dependencies": {
    "@hapi/joi": "^16.1.8",
    "reflect-metadata": "^0.1.13",
    "utility-types": "^3.10.0"
  },
  "devDependencies": {
    "@types/jest": "^24.0.25",
    "@types/joi": "^14.3.4",
    "@types/node": "^13.1.1",
    "eslint": "^6.8.0",
    "jest": "^29.1.2",
    "jest-cli": "^29.1.2",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^29.0.3",
    "tslint": "^5.20.1",
    "typescript": "^4.8.4"
  }
}
